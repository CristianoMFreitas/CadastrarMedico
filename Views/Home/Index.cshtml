@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/foto01.jpg" alt="Imagem de cirurgia" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="text-align:left">
                    Cirurgias com diversas especialidades!
                    <a class="btn btn-default" href="">
                        Saiba mais
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/foto02.jpg" alt="Equipamentos de proteção" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Médicos preocupados com a sua proteção.
                    <a class="btn btn-default" href="">
                        Saiba Mais
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/foto03.jpg" alt="Imagem de médico" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Encontre um profissional adequado para o seu caso.
                    <a class="btn btn-default" href="">
                        Saiba Mais
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Liste</h2>
        <ul>
            <li>Listar todos os médicos cadastrados</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Detalhes</h2>
        <ul>
            <li>Tenha todos os detalhes de cada resgistro.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Edite</h2>
        <ul>
            <li>Controle cada resgistro inserido, podendo editar qualquer campo.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Delete</h2>
        <ul>
            <li>Delete qualquer registro indesejado.</li>
        </ul>
    </div>
</div>
